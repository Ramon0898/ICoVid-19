<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AtencionMedicaFragment"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgatencion"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="-2dp"
            android:src="@drawable/hospital" />

        <TextView
            android:id="@+id/tvnameatencion"
            android:layout_width="385dp"
            android:layout_height="64dp"
            android:layout_below="@id/imgatencion"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="ATENCIÓN MÉDICA"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textatencion"
            android:layout_width="330dp"
            android:layout_height="103dp"
            android:layout_below="@id/tvnameatencion"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:gravity="center_horizontal"
            android:text="@string/atencion"
            android:textColor="#ffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFinalizarAyuda"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textatencion"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="249dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="66dp"
            android:background="#00000000"
            android:text="@string/volver"
            android:textColor="@color/colorBlanco" />

    </RelativeLayout>


</FrameLayout>