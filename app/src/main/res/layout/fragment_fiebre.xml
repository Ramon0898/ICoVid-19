<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FiebreFragment"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/imgfiebre"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/fiebre" />

    <TextView
        android:id="@+id/tvnamefiebre"
        android:layout_width="198dp"
        android:layout_height="73dp"
        android:layout_below="@id/imgfiebre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="108dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="FIEBRE"
        android:textColor="#ffff"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="365dp"
        android:layout_below="@id/tvnamefiebre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        android:text="@string/fiebre"
        android:textColor="#ffff"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>